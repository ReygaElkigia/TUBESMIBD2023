<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MY SPOTITI</title>
    <link rel="stylesheet" href="playback-transaction.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<body>
    <div class="title">
        <h1>MY SPOTITI</h1>
    </div>
    <div class="sidebar">
        <div class="sidebar-header">
            <h2>HI, Pimpinan</h2>
        </div>
        <ul class="menu">
            <li class="with-icon"><a href="#">Home <i class="fas fa-home"></i></a></li>
            <li class="with-icon"><a href="#">Monthly Transaction Report <i class="fas fa-file"></i></a></li>
            <li class="with-icon"><a href="#">Music Playback Transaction Report <i class="fas fa-music"></i></a></li>
            <li class="with-icon"><a href="#">Playback Transaction Status <i class="fas fa-play-circle"></i></a></li>
        </ul>

        <div class="other">
            <a href="#"><i class="fas fa-cog"></i> Settings</a>
            <a href="#"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
    </div>
    
    <div class="chart-container">
        <canvas id="barChart"></canvas>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Ambil data dari tabel dan simpan dalam array
            const data = [];
            const tableRows = document.querySelectorAll(".tabel tbody tr");
            tableRows.forEach(function(row) {
                const month = row.querySelector("td:nth-child(1)").innerText;
                const amount = parseFloat(row.querySelector("td:nth-child(2)").innerText);
                data.push({ month: month, amount: amount });
            });

            // Buat array untuk bulan dan jumlahnya
            const labels = data.map(function(item) {
                return item.month;
            });
            const amounts = data.map(function(item) {
                return item.amount;
            });

            // Buat bar chart menggunakan Chart.js
            const ctx = document.getElementById("barChart").getContext("2d");
            new Chart(ctx, {
                type: "bar",
                data: {
                    labels: labels,
                    datasets: [{
                        label: "Amount",
                        data: amounts,
                        backgroundColor: "purple",
                        borderColor: "purple",
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
</body>

</html>
