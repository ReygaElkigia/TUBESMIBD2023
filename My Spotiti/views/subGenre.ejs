
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../Playlist.css">
    <script src="https://kit.fontawesome.com/985f81e0fc.js" crossorigin="anonymous"></script>
    
    <title>My Spotiti</title> 
</head>
<body>
    <div class="container">
      <div class="column column-1">
        <% if(status == "Membership"){ %>
          
          <%- include('sideBarMembership') %>
        <% } else{ %>
          <%- include('sideBar') %>
        <% } %>
         
      </div>
      <div class="column column-2">
        <div class="made-for-you">
          <h2>Music Genre's</h2>
          <div>
            <form id="searchForm" action="/subGenre" method="get">
                <input type="text" name="search" placeholder="Search genre"  />
                <button type="submit">Search</button>
              </form>
        </div>
          <div class="image-container">
              <table>
                  <thead>
                      <tr> 
                      </tr>
                  </thead>
                  <tbody>
                      <% let i = 1 %>
                      <% for(let row of dataSubGenre) { %>
                          <tr>  
                              <td>
                                <input type="hidden" >
                                <a href="/isiSubGenre?idSG=<%= row.id_subG %>">
                                  <%= row.nama %>
                                </a>
                              </td>  
                          </tr>
                      
                      <% i++ %>
                      <% } %>
  
                  </tbody>
              </table>
          </div>
          <div><br></div>
        </div>
      </div> 
      <div class="column column-3">
        <%- include('sideBar2') %>
      </div>
  </body>
  </html>